<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_user_no"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="userNo："
                android:textColor="#999999" />

            <EditText
                android:id="@+id/et_user_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:enabled="false"
                android:padding="5.0dip"
                android:paddingRight="30dp"
                android:textColor="#999999"
                android:textSize="16.0sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="用户名："
                android:textColor="#999999" />

            <EditText
                android:id="@+id/et_login_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:padding="5.0dip"
                android:paddingRight="30dp"
                android:textColor="@color/gray_color"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="用户等级："
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/et_gamers_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:padding="5.0dip"
                android:paddingRight="30dp"
                android:text="1"
                android:textColor="@color/gray_color"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="角色ID："
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/et_gamers_role_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:padding="5.0dip"
                android:paddingRight="30dp"
                android:text="1001000000009"
                android:textColor="@color/gray_color"
                android:textSize="16.0sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="角色名称："
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/et_gamers_role_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:padding="5.0dip"
                android:paddingRight="30dp"
                android:text="训练家0009"
                android:textColor="@color/gray_color"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="游戏ID："
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/et_game_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:enabled="false"
                android:focusableInTouchMode="true"
                android:padding="5.0dip"
                android:paddingRight="30dp"
                android:textColor="@color/gray_color"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="游戏名称："
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/et_game_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:enabled="false"
                android:focusableInTouchMode="true"
                android:padding="5.0dip"
                android:paddingRight="30dp"
                android:textColor="@color/gray_color"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="区服Num："
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/et_server_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:padding="5.0dip"
                android:paddingRight="30dp"
                android:text="123"
                android:textColor="@color/gray_color"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView44"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="区服名称："
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/et_server_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:padding="5.0dip"
                android:paddingRight="30dp"
                android:text="区服1"
                android:textColor="@color/gray_color"
                android:textSize="16.0sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

